package com {		import flash.display.MovieClip;	import com.bit101.components.*;
	import flash.events.Event;		public class MightyStomp extends MovieClip {				private var sustain:Knob;		private var preamp:Knob;		private var amp:Knob;		private var _sustain:Number = 2;		private var _preamp:Number = 200;		private var _amp:Number = 0.4;				private var _mc:MovieClip;				public function set mc($mc:MovieClip):void {			_mc = $mc;		} 				public function MightyStomp() {			sustain = new Knob(this, 110, 80, "Sustain", _sustainChange);			sustain.minimum = 0;			sustain.maximum = 10;			sustain.value = _sustain;						preamp = new Knob(this, 148, 80, "Preamp", _preampChange);			preamp.minimum = 0;			preamp.maximum = 1000;			preamp.value = _preamp;						amp = new Knob(this, 185, 80, "Amp", _ampChange);			amp.minimum = 0;			amp.maximum = 1;			amp.value = _amp;		}				public function init():void {			_mc.sustain2 = _sustain;			_mc.preamp2 = _preamp;			_mc.amp2 = _amp;		}				private function _sustainChange($e:Event):void {			//trace($e.target.value);			if( isNaN($e.target.value) ) { 				//trace("not a number");				_mc.sustain2 = _sustain;			} else {				_mc.sustain2 = $e.target.value;			}		}				private function _preampChange($e:Event):void {			if( isNaN($e.target.value) ) {				_mc.preamp2 = _preamp;			} else {				_mc.preamp2 = $e.target.value;			}		}				private function _ampChange($e:Event):void {			if( isNaN($e.target.value) ) { 				_mc.amp2 = _amp;			} else {				_mc.amp2 = $e.target.value;			}		}					}}